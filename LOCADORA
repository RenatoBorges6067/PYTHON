print('=== 3 para UTILITARIOS:')
print('=== 4 para VANS:')
print('=== QUALQUER OUTRO VALOR PARA ENCERRAR O PROGRAMA:')
c = int(input('QUAL MODELO VOCÃŠ DESEJA ALUGAR '))

print("="*20)
 
match c:
    case 1:
        print('TEMOS ESSES MODELOS DE CARRO')
        print('1 para HACTH:')
        print('2 para HACTH ESPORTIVO:')
        print('3 para SEDAN:')
        print('4 para ENCERRAR PROGRAMA:')
        ch = int(input('ESCOLHA O MODELO DE CARRO QUE DESEJA:'))

        print('='*20)
        match ch:
                case 1: 
                    print('TEMOS ESSES MODELOS DISPONIVEIS:')
                    print('1 para POLO 2020:')
                    print('2 para PRISMA 2019:')
                    print('3 para FORD KA 2021:')
                    print('4 para ENCERRAR PROGRAMA')
                    cp = int(input('ESCOLHA UM DOS NOSSO MODELOS DISPONIVEIS'))
                    match cp:
                            case 1:
                                print('VOCE ESCOLHEU O MODELO POLO 2020:')

                            case 2:
                                print('VOCE ESCOLHEU O MODELO PRISMA 2019:')

                            case 3: 
                                print('VOCE ESCOLHEU O MODELO FORD KA:')
                            
                            case 4:
                                print('VOCE ESCOLEHU ENCERRAR O PROGRAMA')
                case 2: 
                    print()
                            
